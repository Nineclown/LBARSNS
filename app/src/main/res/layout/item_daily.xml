<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/dailyviewitem_imageview_profile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="7.5dp"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/dailyviewitem_textview_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="User Name" />
        </LinearLayout>

        <ImageView
            android:id="@+id/dailyviewitem_imageview_content"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="fitXY"
            android:src="@color/com_facebook_blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/dailyviewitem_imageview_favorite"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_favorite_border" />

            <ImageView
                android:id="@+id/dailyviewitem_imageview_comment"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_chat_black" />

        </LinearLayout>

        <TextView
            android:id="@+id/dailyviewitem_textview_favoritecounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/favorite"/>

        <TextView
            android:id="@+id/dailyviewitem_textview_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:layout_marginStart="8dp"
            tools:text="@string/alarm_comment" />

    </LinearLayout>

</layout>